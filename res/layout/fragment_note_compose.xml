<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="?android:attr/actionBarSize" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp" >

        <EditText
            android:id="@+id/edtNoteTitleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#f5f5f5"
            android:fontFamily="sans-serif-light"
            android:hint="Title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#414141"
            android:textStyle="bold" />

        <com.openerp.util.tags.TagsView
            android:id="@+id/edtComposeNoteTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="2dp"
            android:background="#f5f5f5"
            android:fontFamily="sans-serif-light"
            android:hint="Tags"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/edtNoteComposeDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#f5f5f5"
            android:fontFamily="sans-serif-light"
            android:hint="@string/compose_note_description" />

        <GridView
            android:id="@+id/noteAttachmentGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:verticalSpacing="5dp" />

        <WebView
            android:id="@+id/webNoteComposeWebViewPad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
    </LinearLayout>

</ScrollView>